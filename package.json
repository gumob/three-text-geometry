{
  "name": "three-text-geometry",
  "description": "Renders BMFont files in ThreeJS with word-wrapping",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Kojiro Futamura",
    "email": "gumob.dev@gmail.com",
    "url": "https://github.com/gumob"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/gumob/three-bmfont-text-ts.git"
  },
  "homepage": "https://github.com/gumob/three-bmfont-text-ts",
  "bugs": {
    "url": "https://github.com/gumob/three-bmfont-text-ts/issues"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "exports": {
    ".": {
      "require": "./dist-cjs/index.js",
      "import": "./dist-esm/index.js"
    }
  },
  "main": "./dist-cjs/index.js",
  "module": "./dist-esm/index.js",
  "scripts": {
    "reflect:toc": "markdown-toc README.md -i --maxdepth 4 && prettier --write README.md",
    "format": "yarn format:prettier && yarn format:imports",
    "format:prettier": "prettier --write .",
    "format:imports": "format-imports src && format-imports tests",
    "format:check": "yarn format:check:imports && yarn format:check:prettier",
    "format:check:imports": "format-imports --check src tests",
    "format:check:prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "dev": "yarn clean && tsc --build --watch tsconfig.cjs.json tsconfig.esm.json",
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json && ./minify.sh cjs",
    "build:esm": "tsc --project tsconfig.esm.json && ./minify.sh esm",
    "test": "jest --clearCache && jest",
    "test:coverage": "jest --clearCache && jest --coverage",
    "test:e2e": "jest --config jest.config.e2e.ts",
    "_test:e2e": "playwright test ./tests/demo.e2e.ts",
    "clean": "rm -rf dist-cjs dist-esm node_modules/.cache",
    "prepublishOnly": "yarn build",
    "prepare": "ts-patch install -s",
    "upgrade": "yarn up '*' '@*/*'",
    "typedoc": "yarn lint && typedoc --options typedoc.json"
  },
  "dependencies": {
    "ajv": "^8.8.2",
    "axios": "^0.24.0",
    "fast-xml-parser": "^4.0.0-beta.2",
    "floggy": "^0.3.1",
    "three": "^0.135.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@microsoft/tsdoc-config": "^0.15.2",
    "@playwright/test": "^1.16.3",
    "@prisma-labs/prettier-config": "^0.1.0",
    "@types/ajv": "^1.0.0",
    "@types/gl": "^4.1.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@types/offscreencanvas": "^2019.6.4",
    "@types/three": "^0.134.0",
    "@types/ts-nameof": "^4.2.1",
    "@types/uglify-es": "^3.0.0",
    "@types/uglify-js": "^3.13.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "canvas": "^2.8.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-tsdoc": "^0.2.14",
    "format-imports": "^2.4.1",
    "gl": "^4.9.2",
    "jest": "^27.3.1",
    "jest-playwright-preset": "^1.7.0",
    "jest-three": "^1.3.1",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-typeahead": "^1.0.0",
    "markdown-toc": "^1.2.0",
    "playwright": "^1.16.3",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "ts-jest-resolver": "^2.0.0",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.4.0",
    "ts-patch": "^2.0.1",
    "typedoc": "^0.22.10",
    "typedoc-plugin-merge-modules": "^3.0.2",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "^4.5.2",
    "typescript-snapshots-plugin": "^1.7.0",
    "typescript-transform-paths": "^3.3.1",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.14.3"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": 0,
    "wrappingStyle": "prettier"
  }
}
