{
  "name": "three-text-geometry",
  "description": "Renders BMFont files in ThreeJS with word-wrapping",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Kojiro Futamura",
    "email": "gumob.dev@gmail.com",
    "url": "https://github.com/gumob"
  },
  "repository": {
    "type": "https",
    "url": "https://github.com/gumob/three-text-geometry.git"
  },
  "homepage": "https://github.com/gumob/three-text-geometry",
  "bugs": {
    "url": "https://github.com/gumob/three-text-geometry/issues"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "exports": {
    ".": {
      "require": "./dist-cjs/index.js",
      "import": "./dist-esm/index.js"
    }
  },
  "main": "./dist-cjs/index.js",
  "module": "./dist-esm/index.js",
  "scripts": {
    "reflect:toc": "markdown-toc README.md -i --maxdepth 4 && prettier --write README.md",
    "format": "yarn format:prettier && yarn format:imports",
    "format:prettier": "prettier --write .",
    "format:imports": "format-imports src && format-imports tests",
    "format:check": "yarn format:check:imports && yarn format:check:prettier",
    "format:check:imports": "format-imports --check src tests",
    "format:check:prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "dev": "yarn clean:dist && tsc --build --watch tsconfig.cjs.json tsconfig.esm.json",
    "build": "yarn clean:dist && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json && ./minify.sh cjs",
    "build:esm": "tsc --project tsconfig.esm.json && ./minify.sh esm",
    "test": "yarn clean:jest && jest",
    "test:coverage": "yarn clean:jest && yarn clean:coverage && jest --coverage",
    "test:e2e": "jest --config jest.config.e2e.ts",
    "_test:e2e": "playwright test ./tests/demo.e2e.ts",
    "clean": "yarn clean:dist && yarn clean:cache && yarn clean:node_modules && clean:jest",
    "clean:jest": "jest --clearCache",
    "clean:coverage": "rm -rf coverage",
    "clean:dist": "rm -rf dist-cjs dist-esm",
    "clean:cache": "yarn cache clean",
    "clean:node_modules": "node_modules/.cache",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "ts-patch install -s && husky install",
    "upgrade": "yarn up '*' '@*/*'",
    "typedoc": "yarn format && yarn lint && typedoc --options typedoc.json",
    "all": "yarn format && yarn lint && yarn typedoc && yarn test:coverage && yarn build"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "fast-xml-parser": "^4.4.1",
    "floggy": "^0.3.5",
    "three": "^0.167.1",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@microsoft/tsdoc": "^0.15.0",
    "@microsoft/tsdoc-config": "^0.17.0",
    "@playwright/test": "^1.46.1",
    "@prisma-labs/prettier-config": "^0.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/ajv": "^1.0.0",
    "@types/gl": "^6.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.1",
    "@types/offscreencanvas": "^2019.7.3",
    "@types/three": "^0.167.2",
    "@types/ts-nameof": "^4.2.5",
    "@types/uglify-es": "^3.0.3",
    "@types/uglify-js": "^3.17.5",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "axios": "^1.7.5",
    "canvas": "^2.11.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "format-imports": "^4.0.4",
    "gl": "^8.0.2",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-playwright-preset": "^4.0.0",
    "jest-three": "^1.3.1",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-typeahead": "^2.2.2",
    "markdown-toc": "^1.2.0",
    "pinst": "^3.0.0",
    "playwright": "^1.46.1",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.0",
    "ts-jest": "^29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "typedoc": "^0.26.6",
    "typedoc-plugin-merge-modules": "^6.0.0",
    "typedoc-plugin-rename-defaults": "^0.7.1",
    "typescript": "^5.5.4",
    "typescript-snapshots-plugin": "^1.7.0",
    "typescript-transform-paths": "^3.5.0",
    "uglify-es": "3.3.9",
    "uglify-js": "^3.19.2"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": 0,
    "wrappingStyle": "prettier"
  },
  "packageManager": "yarn@4.4.1"
}
